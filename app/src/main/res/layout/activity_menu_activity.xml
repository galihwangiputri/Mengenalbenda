<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.android.mengenalbenda.menu_activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
   <ImageButton
       android:layout_width="match_parent"
       android:layout_height="150dp"
       android:id="@+id/bunga"
       android:background="#fdf1afdd"
       android:src="@drawable/daisy"
       />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/kendaraan"
        android:layout_below="@id/bunga"
        android:background="#fd7eedd5"
        android:src="@drawable/tourist"
        />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/hewan"
        android:layout_below="@id/kendaraan"
        android:background="#fd93acf2"
        android:src="@drawable/wolf"
        />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/buah"
            android:layout_below="@id/hewan"
            android:background="#fdc8ef6b"
            android:src="@drawable/watermelon"
            />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/makanan"
            android:layout_below="@id/buah"
            android:background="#fdfce89f"
            android:src="@drawable/doughnut"
            />

    </RelativeLayout>
</ScrollView>
